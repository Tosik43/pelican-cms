{
  "collectionName": "components_shared_seos",
  "info": {
    "displayName": "Блок SEO",
    "icon": "search",
    "description": ""
  },
  "options": {},
  "attributes": {
    "metaTitle": {
      "required": true,
      "type": "string",
      "maxLength": 100
    },
    "metaDescription": {
      "type": "text",
      "required": true,
      "maxLength": 500,
      "minLength": 50
    },
    "metaImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    },
    "metaSocial": {
      "type": "component",
      "repeatable": true,
      "component": "shared.meta-social",
      "required": false
    },
    "keywords": {
      "type": "text",
      "regex": "[^,]+"
    },
    "metaRobots": {
      "type": "string",
      "regex": "[^,]+"
    },
    "structuredData": {
      "type": "json"
    },
    "metaViewport": {
      "type": "string"
    },
    "canonicalURL": {
      "type": "string"
    }
  }
}
