{
    "eslint.alwaysShowStatus": true,
    "eslint.options": {
      "extensions": [".js", ".ts"]
    },
    "eslint.validate": [
      "javascript",
      "typescript", 
    ],
    "[typescript]": {
      "editor.formatOnSave": true
    },
    "files.eol": "\n",
    "editor.tabSize": 2,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.removeUnusedImports": "explicit"
    },
} 